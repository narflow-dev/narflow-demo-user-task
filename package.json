{
    "name": "viser-boilerplate",
    "module": "index.ts",
    "scripts": {
        "db:generate": "bun drizzle-kit generate",
        "db:migrate": "bun drizzle-kit migrate",
        "db:push": "bun drizzle-kit push",
        "db:studio": "bun drizzle-kit studio",
        "dev": "bun --hot run src/index.ts",
        "start": "bun run db:push && bun run dev",
        "build": "bun build src/index.ts --outdir ./dist",
        "lint": "bun eslint . && bun run prettier .",
        "lint:fix": "bun eslint . --fix && bun run prettier --write ."
    },
    "type": "module",
    "dependencies": {
        "@apollo/server": "^4.11.2",
        "@apollo/subgraph": "^2.9.3",
        "@graphql-tools/load-files": "^7.0.0",
        "@graphql-tools/merge": "^9.0.15",
        "bcryptjs": "^3.0.3",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.36.4",
        "graphql": "^16.10.0",
        "hono": "^4.6.14",
        "pg": "^8.13.1",
        "uuid": "^11.0.3",
        "zod": "^3.24.1"
    },
    "peerDependencies": {
        "typescript": "^5.6.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/bcrypt": "^6.0.0",
        "@types/bun": "latest",
        "@types/pg": "^8.11.10",
        "drizzle-kit": "^0.28.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-perfectionist": "^3.9.1",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "tsx": "^4.19.2",
        "typescript-eslint": "^8.18.2"
    }
}
